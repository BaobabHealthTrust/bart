<style>
  .options{
    width:570px;
  }

  .touchscreenTextInput{display:none;}

  #viewport {height:450px;}
</style>
<% form_tag :action => 'report_date_select' do %>
  
  <% options = [""]
     options << "< 6 months"
     options << "6 months to < 1 yr"
     options << "1 to < 5"
     options << "5 to 14"
     options << "> 14 to < 20"
     options << "20 to < 30"
     options << "30 to < 40"
     options << "40 to < 50"
     options << "50 and above"
     options << "none"
  %>

  <%= select_tag('age_groups[]', options_for_select(options),:tt_onLoad => "changeButtons()",:multiple => true, :helpText =>"Select Age Group(s)") %>

  <%= hidden_field_tag "report_type", @report_type %>
  <%= hidden_field_tag "diagnosis", @diagnosis %>
<% end %>
<script>
function changeButtons(){
  $('nextButton').innerHTML = "Select"
  $('cancelButton').innerHTML = "Finish"
  $('cancelButton').style.backgroundColor = "lightgray"
  $('cancelButton').style.borderColor = "gray"
  $('clearButton').style.display = "none"
  tstConfirmCancel = false;
}
</script>
