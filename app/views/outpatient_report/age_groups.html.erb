<%= render :partial => 'header' %>
<%= stylesheet_link_tag "outpatient_reports" %>
<%= stylesheet_link_tag "outpatient_reports_age_groups" %>
<br/>

<table cellspacing="0" cellpadding="0" border="0" width="100%">
  <tr>
    <td>
       <table cellspacing="0" cellpadding="1" border="0" width="100%" >
         <tr>
            <th width="25%" style="text-align:left;">AGE GROUP</th>
            <th width="25%" style="text-align:right;">FEMALE<%='&nbsp;'*3%></th>
            <th width="25%" style="text-align:right;">MALE<%='&nbsp;'*3%></th>
            <th width="25%" style="text-align:right;">TOTAL<%='&nbsp;'*3%></th>
         </tr>
       </table>
    </td>
  </tr>
  <tr>
    <td>
       <div style="width:100%; height:250px; overflow:auto;">
         <table cellspacing="0" cellpadding="1" border="1" width="100%" >
         <%total = 0  
           color = 'blue'
           @age_groups.sort.each{|group,value|
             if color == 'blue'
               color = 'white'
             else
               color='blue'
             end  
           %>
           <tr>
             <td class='data color_<%=color%>' style="text-align:left;"><%=group%></td>
             <td class='data color_<%=color%>'><%=@age_groups[group]['Female']%></td>
             <td class='data color_<%=color%>'><%=@age_groups[group]['Male']%></td>
             <td class='data color_<%=color%>' style="padding-right:13px;"><%=@age_groups[group]['Female'] + @age_groups[group]['Male']%></td>
           </tr>
           <%total+= (@age_groups[group]['Female'] + @age_groups[group]['Male'])%>
         <%}%>
         </table>  
       </div>
    </td>
  </tr>
  <%="Total patient(s): #{total}"%>
</table><br/>
