<script>
  var original_form_current_stock = []
  var original_form_dispensed = []
  var original_form_prescribed = []
  var original_form_consumption_per = []
</script>

<h2>Drug stock report<br><%= @quater%></br></h2>
<%= render :partial => "header" %>
</br>
<table>
  <tr class="header">
    <td>Drug name</td>
    <td class="caldata">Current stock</td>
    <td class="caldata">Prescribed</td>
    <td class="caldata">Dispensed</td>
    <td class="caldata">Consumed (%)</td>
    <td>&nbsp;</td>
  </tr>
  <%color = "blue"
    count = 1
    original_form_count = 0
    @stock.each{|name,values|
      if color == "blue"
        color = "white"
      else
        color = "blue"
      end
      current_stock = values["current_stock"]
      prescribed = values["prescribed"]
      dispensed = values["dispensed"]
      consumption_per = values["consumption_per"]
      %>
      <script>
        original_form_current_stock[<%=original_form_count%>] = <%=current_stock%>
        original_form_dispensed[<%=original_form_count%>] = <%=dispensed%>
        original_form_prescribed[<%=original_form_count%>] = <%=prescribed%>
        original_form_consumption_per[<%=original_form_count%>] = <%=consumption_per.gsub('%','') %>
      </script>
  <tr>
    <td class="color_<%=color%>"><%=name%></td>
    <td class="color_<%=color%> caldata" id="current_stock_<%=count%>"><%=current_stock%></td>
    <td class="color_<%=color%> caldata" id="prescribed_<%=count%>"><%=prescribed%></td>
    <td class="color_<%=color%> caldata" id="dispensed_<%=count%>"><%=dispensed%></td>
    <td class="color_<%=color%> caldata" id="consumption_per_<%=count%>"><%=consumption_per%></td>
    <td><input id='patient_link_<%=count%>' class='patient_link' type="button" onmousedown="getAtt(<%=current_stock%>,<%=prescribed%>,<%=dispensed%>,<%=count%>)" value='View: bottle(s)' /></td>
   </tr>
   <% count+=1
      original_form_count+=1
    }%>
</table>

<div id="keypad">
 <center><label style="font-size:25px;">Number of pills per bottle</label></br>
 <input type="number" id="press"></br>
 <span class="keypad">
  <button id="1" class="keypadbutton" onmousedown="press('1');">1</button>
  <button id="2" class="keypadbutton" onmousedown="press('2');">2</button>
  <button id="3" class="keypadbutton" onmousedown="press('3');">3</button>
  <button id="4" class="keypadbutton" onmousedown="press('4');">4</button>
  <button id="5" class="keypadbutton" onmousedown="press('5');">5</button>
  <button id="6" class="keypadbutton" onmousedown="press('6');">6</button>
  <button id="7" class="keypadbutton" onmousedown="press('7');">7</button>
  <button id="8" class="keypadbutton" onmousedown="press('8');">8</button>
  <button id="9" class="keypadbutton" onmousedown="press('9');">9</button>
  <button id="0" class="keypadbutton" onmousedown="press('0');">0</button>
  <button id="enter" style="width:130px;" onmousedown="changeView();">Done</button>
  <button id="clear" style="width:130px;" onmousedown="javascript:document.getElementById('press').value=null;document.getElementById('enter').disabled=true;">Clear</button>
  <button id="cancel" style="width:130px;" onmousedown="cancel();">Cancel</button>
 </span>
 </center>
</div>



<script>
var drugs_current_stock = 0
var drugs_prescribed = 0
var drugs_dispensed = 0
selected_number = 0
row_number = 0
document.getElementById('enter').disabled=true;
elements = document.getElementsByClassName('patient_link')
for(var i = 0; i < elements.length; i++){
  document.getElementsByClassName('patient_link')[i].disabled=false;
}

function press(numbers){
  document.getElementById('press').value+=numbers
  if (parseFloat(document.getElementById('press').value) > 0){
    document.getElementById('enter').disabled=false;
  }else{
    document.getElementById('enter').disabled=true;
  }
}


function getAtt(current_stock,prescribed,dispensed,row){
  if(document.getElementById("patient_link_" + row).value == "View: Pill(s)"){
    document.getElementById("current_stock_" + row).innerHTML = original_form_current_stock[row - 1]
    document.getElementById("dispensed_" + row).innerHTML = original_form_dispensed[row - 1]
    document.getElementById("prescribed_" + row).innerHTML = original_form_prescribed[row - 1]
    document.getElementById("consumption_per_" + row).innerHTML = original_form_consumption_per[row - 1] + " %"
    document.getElementById("patient_link_" + row).value = "View: bottle(s)"
    return
  }
  drugs_current_stock = current_stock
  drugs_prescribed = prescribed 
  drugs_dispensed = dispensed
  row_number = row

  elements = document.getElementsByClassName('patient_link')
  for(var i = 0; i < elements.length; i++){
    document.getElementsByClassName('patient_link')[i].disabled=true;
  }

  document.getElementById("keypad").style.display = 'inline';
}

function changeView(){
  selected_number = parseFloat(document.getElementById('press').value)

  elements = document.getElementsByClassName('patient_link')
  for(var i = 0; i < elements.length; i++){
    document.getElementsByClassName('patient_link')[i].disabled=false;
  }

  document.getElementById('press').value = null;
  document.getElementById("keypad").style.display = 'none';
  document.getElementById('enter').disabled=true

  document.getElementById("current_stock_" + row_number).innerHTML = (document.getElementById("current_stock_" + row_number).innerHTML/selected_number)
  document.getElementById("dispensed_" + row_number).innerHTML = (document.getElementById("dispensed_" + row_number).innerHTML/selected_number)
  document.getElementById("prescribed_" + row_number).innerHTML = (document.getElementById("prescribed_" + row_number).innerHTML/selected_number)

  var per = ((document.getElementById("dispensed_" + row_number).innerHTML / document.getElementById("current_stock_" + row_number).innerHTML) * 100) 
  document.getElementById("consumption_per_" + row_number).innerHTML = Math.round(parseFloat(per)) + " %"


  document.getElementById("patient_link_" + row_number).value = "View: Pill(s)"
}

function cancel(){
  document.getElementById('press').value = null;
  document.getElementById('enter').disabled=true
  document.getElementById("keypad").style.display = 'none';
  elements = document.getElementsByClassName('patient_link')
  for(var i = 0; i < elements.length; i++){
    document.getElementsByClassName('patient_link')[i].disabled=false;
  }
}
</script>
